            window.location.href = "/app/custom404/index.aspx";
            break;
        case "FAQ":
            window.location.href = "/manage_pages_edit.aspx?pageid=" + obj + "&isFaq=true";
            break;
        default:
            window.location.href = "/manage_pages_edit.aspx?pageid=" + obj;
            break;
    }


}

